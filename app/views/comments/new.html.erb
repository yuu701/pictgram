<div class="comments-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 comments-new-container">
        <h1 class="text-center">コメント投稿</h1>
          <%= form_for [@topic, @comment] do |f| %>
            <div class="form-group">
              <%= f.label :コメント %>
              <%= f.text_area :content %>
            </div>
            <%= f.submit "投稿する", class: "btn-block" %>
          <% end %>
      </div>
    </div>
  </div>
</div>